rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // DEVELOPMENT MODE - Allow all authenticated users full access
    // TODO: Re-enable role-based rules for production

    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow all authenticated users to read/write all collections
    match /{collection}/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Public collections (no auth required for read)
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /menuItems/{menuItemId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
